<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/black"
    android:layout_marginVertical="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="265dp"
        android:layout_height="328dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="9dp"
        app:cardBackgroundColor="#131310"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginVertical="150dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ltitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:fontFamily="monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Title"
                android:textColor="#C3BEBE"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginVertical="200dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_lyear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="Year"
                android:textColor="#424242"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ltype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="Type"
                android:textColor="#E91E63"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginVertical="240dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:numStars="5"
                android:rating="4.4"
                android:stepSize=".5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_limdbId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="Id"
                android:textColor="#2196F3"
                android:textSize="14sp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-90dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="15dp"
        app:cardElevation="60dp"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottomCard"
        app:layout_constraintVertical_bias="0.44">

        <ImageView
            android:id="@+id/iv_lposter"
            android:layout_width="197dp"
            android:layout_height="262dp"
            android:background="@drawable/background"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>