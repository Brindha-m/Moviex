<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    android:layout_marginBottom="-20dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_margin="20dp"
        android:background="@drawable/black"
        app:cardBackgroundColor="#070606"
        app:cardCornerRadius="15dp"
        app:cardElevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginVertical="310dp"
            android:layout_weight=".8"
            android:background="@drawable/movie"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvd_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                android:fontFamily="monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Naruto: Shippuden"
                android:textColor="#E1DCDC"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="410dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvd_year"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="2007-2017"
                android:textColor="#CDDC39"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvd_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="Series"
                android:textColor="#E91E63"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="470dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:numStars="5"
                android:rating="4.4"
                android:stepSize=".5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvd_imdbId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:padding="5dp"
                android:text="tt0988824"
                android:textColor="#2196F3"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginVertical="530dp"
            android:layout_weight=".8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvd_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_weight="0.5"
                android:fontFamily="monospace"
                android:gravity="center"
                android:padding="5dp"
                android:text="Made with ❤"
                android:textColor="#BDBBBB"
                android:textSize="10sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardCornerRadius="15dp"
            app:cardElevation="60dp"
            app:layout_constraintBottom_toTopOf="@id/bottomCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomCard"
            app:layout_constraintVertical_bias="0.44">

            <ImageView
                android:id="@+id/ivd_poster"
                android:layout_width="220dp"
                android:layout_height="320dp"
                android:background="@drawable/background"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

<!--SEARCH PART-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/header_RL"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/black"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/detail_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_baseline_arrow_back_24"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0.3"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/detail_search"
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/search_here"

                        />

                    <ImageButton
                        android:id="@+id/detail_search_parameter"
                        android:layout_width="48dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="60dp"
                        android:background="@color/white"
                        android:minWidth="80dp"
                        android:minHeight="80dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:src="@drawable/ic_baseline_search_24" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/detail_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="60dp"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_baseline_home_24" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>